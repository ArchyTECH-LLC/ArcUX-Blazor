@using Arc.UX.Styles
@inherits ArcElement

@inject IIconStyleProvider IconStyleProvider
@inject IComponentStyleProvider ComponentStyleProvider


@if (Name.HasValue())
{
    <i class="arc-icon @ComponentStyleProvider.Text(Style) @IconStyleProvider.Icon(Name, Design, Animation) @CssClasses" title=@Title></i>
}

@code {

    [Parameter]
    public string? Name { get; set; }
    [Parameter]
    public string? Title { get; set; }
    
    [Parameter]
    public string? Design { get; set; }
    // public FontAwesomeDesign Design { get; set; } = FontAwesomeDesign.Solid;

    [Parameter]
    public string? Animation { get; set; }
    // public FontAwesomeAnimation? Animation { get; set; }
    
    [Parameter]
    public ElementStyle? Style { get; set; }

    
}