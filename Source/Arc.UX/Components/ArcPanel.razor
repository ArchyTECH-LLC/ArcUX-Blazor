@inherits ArcElement

@if (Visible)
{

    <div class="arc-panel card my-3 @CssClasses">
        @if (Header != null)
        {
            <div class="card-header">
                @Header
            </div>
        }

        @if (Header != null)
        {
            <div class="card-body">
                @Body
            </div>
        }

        @if (Footer != null)
        {
            <div class="card-footer">
                @Footer
            </div>
        }
    </div>
}

@code {

    [Parameter]
    public RenderFragment? Header { get; set; }

    [Parameter]
    public RenderFragment? Body { get; set; }

    [Parameter]
    public RenderFragment? Footer { get; set; }

}