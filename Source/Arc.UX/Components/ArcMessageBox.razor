@inherits ArcElement
@using Arc.UX.Styles

<ArcComponent Component="this" Style=@Style> 
    <table>
        <tr>
            <td class="arc-message-box-banner">
                <ArcIcon Name=@IconName Design=@IconDesign Animation=@IconAnimation />
            </td>
            <td class="arc-message-box-content">

                <div class="arc-message-box-message">
                    @if (Title.HasValue())
                    {
                        <div class="arc-message-box-title">
                            @Title
                        </div>
                    }

                    @ChildContent
                </div>
            </td>
        </tr>
    </table>
</ArcComponent>


@code {
    [Parameter]
    public string? Title { get; set; }

    [Parameter]
    public string? IconName { get; set; }

    [Parameter]
    public string? IconDesign { get; set; } //= FontAwesomeDesign.Solid;
                                            // public FontAwesomeDesign IconDesign { get; set; } = FontAwesomeDesign.Solid;

    [Parameter]
    public string? IconAnimation { get; set; }
    // public FontAwesomeAnimation? IconAnimation { get; set; }

    [Parameter]
    public ElementStyle Style { get; set; } = ElementStyle.Default;

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

}
